{%- if settings.company_logo -%}
{%- if template == 'index' -%}
<a href="/" class="theme-logo">
  <img src="{%- if settings.company_logo -%}{{ settings.company_logo | img_url: 'master' }}{% else %}https://dummyimage.com/120x38/f7f7f7/999999{% endif %}" alt="{{ settings.company_logo.alt | default: shop.name }}">
</a>
{%- endif -%}
<a href="/" class="sticky-logo">
  <img src="{%- if settings.company_logo_sticky -%}{{ settings.company_logo_sticky | img_url: 'master' }}{% else %}https://dummyimage.com/120x38/f7f7f7/999999{% endif %}" alt="{{ settings.company_logo_sticky.alt | default: shop.name }}">
</a>
{%- else -%}
<a href="/" class="shop-name">
	<span>{{ shop.name }}</span>
</a>
{%- endif -%}
<style>
.logo a.shop-name span {
    color: #000;
    font-size: 24px;
    font-weight: 600;
}
</style>