<!-- breadcrumb-area start -->
{% if settings.breadcrumb_banner_enable %}
{% unless template == 'index' or template == 'product' or template == 'page.contact 02' or template == 'product.template2' or template == 'product.template3' %}
<section class="breadcrumb-area">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="breadcrumb-index">
                    <!-- breadcrumb main-title start-->
                    <div class="breadcrumb-title">
                        {% if template contains 'product' %}
                        <h2>{{ product.title | truncate: 30 }}</h2>
                        {% elsif template contains 'collection' and collection.handle %}
                        <h2>{{ collection.title | truncate: 30 }}</h2>
                        {% elsif template == 'blog' %}
                        <h2>{{ blog.title | truncate: 30 }}</h2>
                        {% elsif template == 'article' %}
                        <h2>{{ blog.title | truncate: 30 }}</h2>
                        {% else %}
                        <h2>{{ page_title | truncate: 30 }}</h2>
                        {% endif %}
                    </div>
                    <!-- breadcrumb main-title end-->

                    <!-- breadcrumb-list start -->
                    {% include 'breadcrumb-builtin' %}
                    <!-- breadcrumb-list end -->
                </div>
            </div>
        </div>
    </div>
</section>
{% endunless %}
{% endif %}
<!-- breadcrumb-area end -->
<style>
.breadcrumb-area {
    padding-top: {{ settings.breadcrumb_padding_top }}px;
    padding-bottom: {{ settings.breadcrumb_padding_bottom }}px;
    {% if settings.breadcrumb_bg_image_enable %}
        {% if template == 'page.about' %}
        background-image: url('{% if settings.about_breadcrumb_bg_image %}{{ settings.about_breadcrumb_bg_image | img_url: 'master' }}{% else %}https://dummyimage.com/1920x300/f7f7f7/999999{% endif %}');
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
        {% elsif template == 'page.about-modern' %}
        background-image: url('{% if settings.about_02_breadcrumb_bg_image %}{{ settings.about_02_breadcrumb_bg_image | img_url: 'master' }}{% else %}https://dummyimage.com/1920x300/f7f7f7/999999{% endif %}');
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
        {% else %}
        background-image: url('{% if settings.breadcrumb_bg_image %}{{ settings.breadcrumb_bg_image | img_url: 'master' }}{% else %}https://dummyimage.com/1920x300/f7f7f7/999999{% endif %}');
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
        {% endif %}
    {% else %}
    background-color: {{ settings.breadcrumb_bg_color }};
    {% endif %}
    position: relative;

    {% if settings.breadcrumb_bottom_border_enable %}
    border-top: 1px solid #e2e2e2;
    border-bottom: 1px solid #e2e2e2;
    {% endif %}
}
{% if settings.breadcrumb_bg_image_enable %}
.breadcrumb-area::before {
    content: "";
    position: absolute;
    top: 0;
    {% if settings.enable_rtl %}
    right: 0;
    {% else %}
    left: 0;
    {% endif %}
    width: 100%;
    height: 100%;
    background-color: {{ settings.breadcrumb_bg_image_overlay_color }};
    opacity: {{ settings.breadcrumb_bg_image_overlay_color_opacity }};
}
{% endif %}
@media (max-width: 1199px) {
    .breadcrumb-area {
        padding-top: {{ settings.breadcrumb_padding_top_ip }}px;
        padding-bottom: {{ settings.breadcrumb_padding_bottom_ip }}px;
    }
}
@media (max-width: 767px) {
    .breadcrumb-area {
        padding-top: {{ settings.breadcrumb_padding_top_xs }}px;
        padding-bottom: {{ settings.breadcrumb_padding_bottom_xs }}px;
    }
}

/* breadcrumb title css */
.breadcrumb-area .breadcrumb-index{
    display: flex;
    align-items: center;
    flex-direction: column-reverse;
}
.breadcrumb-area .breadcrumb-index .breadcrumb-title {
    margin-top: 35px;
}
.breadcrumb-area .breadcrumb-index .breadcrumb-title h2{
    font-size: 55px;
    font-weight: 500;
    line-height: 1;
    color: {{ settings.breadcrumb_title_color }};
    
}
@media (max-width: 1199px) {
    .breadcrumb-area .breadcrumb-index .breadcrumb-title{
        margin-top: 15px;
    }
    .breadcrumb-area .breadcrumb-index .breadcrumb-title h2{
        font-size: 30px;
    }
}
@media (max-width: 767px) {
    .breadcrumb-area .breadcrumb-index .breadcrumb-title h2{
        font-size: 20px;
    }
}
</style>