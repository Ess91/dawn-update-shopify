<section class="insta-wrap">
    <div class="section-capture">
        <div class="section-title">
            {% if section.settings.section_sub_title != '' %}
            <span>{{ section.settings.section_sub_title }}</span>
            {% endif %}
            {% if section.settings.section_title != '' %}
            <h2>{{ section.settings.section_title }}</h2>
            {% endif %}
        </div>
    </div>
    <div class="insta-wrap-inner">
        <div class="owl-carousel owl-theme" id="insta-slider">
            {% for block in section.blocks %}
            <div class="item wow animate__fadeInUp">
                <a class="insta-content" href="{{ block.settings.slider_banner_url }}" target="blank">
                    <img src="{% if block.settings.insta_img %}{{ block.settings.insta_img | img_url: 'master' }}{% else %}https://dummyimage.com/320x320/f7f7f7/999999{% endif %}">
                    <span class="insta-icon"><i class="fab fa-instagram"></i></span>
                </a>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
<!-- Hero Section End -->
<script>
$( document ).ready(function() {
    $('#insta-slider').owlCarousel({
        loop:true,
        margin:30,
        {%- if settings.enable_rtl -%}
        rtl: true,
        {%- else -%}
        fade: true,
        {%- endif -%}
        nav: false,
        navText: ['<i class="fa fa-angle-left"></i>','<i class="fa fa-angle-right"></i>'],
        lazyLoad: true,
        dots: false,
        autoplay: true,
        autoplayTimeout: 5000,
        autoplayHoverPause: true,
        responsive:{
            0:{
              items: 2,
              margin: 15
            },
            479:{
              items: 2,
              margin: 15
            },
            540:{
              items: 3,
              margin: 15
            },
            768:{
              items: 4,
              margin: 15
            },
            979:{
              items: 5,
              margin: 15
            },
            1199:{
              items: 6,
              margin: 30
            }
        }
    });
});
</script>
