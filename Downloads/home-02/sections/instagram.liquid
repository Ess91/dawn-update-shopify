    }
}
.insta-wrap .insta-content{
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
}
.insta-wrap .insta-content:after{
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    opacity: 0;
    height: 100%;
    width: 100%;
    visibility: hidden;
    background: rgba(0,0,0,.4) none repeat scroll 0 0;
}
.insta-wrap .insta-content .insta-icon{
    font-size: 22px;
    position: absolute;
    color: #fff;
    opacity: 0;
    visibility: hidden;
    z-index: 2;
}
.insta-wrap .insta-content:after,
.insta-wrap .insta-content .insta-icon{
    -webkit-transition: all 0.3s ease-in-out 0s;
    -o-transition: all 0.3s ease-in-out 0s;
    transition: all 0.3s ease-in-out 0s;
}
.insta-wrap .insta-content:hover:after,
.insta-wrap .insta-content:hover .insta-icon{
    opacity: 1;
    visibility: visible;
}

</style>