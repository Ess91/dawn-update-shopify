<section class="footer-top-area" {% if section.settings.footer_bg_img_enable %}style="background-image: url('{% if section.settings.footer_bg_img %}{{ section.settings.footer_bg_img | img_url: 'master' }}{% else %}https://dummyimage.com/1920x877/f7f7f7/999999{% endif %}');"{% endif %}>
  <div class="container">
    <div class="footer-list-wrap">
      <ul class="footer-list">
        {% for block in section.blocks %}
        {% case block.type %}
        {% when 'linklist1' %}
        <li class="ftlink-li link-list">
          <h2 class="ft-title">{{ block.settings.footer_menu_title }}</h2>
          <a data-bs-toggle="collapse" href="#collapse-{{ block.settings.footer_menu_title | handleize }}" class="ft-title">
            <span>{{ block.settings.footer_menu_title }}</span>
            <i class="ti-plus"></i>
          </a>
          <ul class="footer-sublist collapse" id="collapse-{{ block.settings.footer_menu_title | handleize }}">
            {% assign footer_menu = block.settings.footer_menu_handle %}
            {% for link in linklists[footer_menu].links %}
            {% if linklists[footer_menu].links != '' %}
            <li class="ftsublink-li">
              <a href="{{ link.url }}" class="ft-sublink">{{ link.title }}</a>
            </li>
            {% endif %}
            {% endfor %}
          </ul>          
        </li>
        {% endcase %}
        {% endfor %}

        <li class="ftlink-li footer-info">
          <div class="center-content">
            {%- include 'company-logo-footer' -%}
            <div class="newsletter-content">
              <p>{{ section.settings.newsletter_description }}</p>
              {%- include 'newsletter' -%}
            </div>
          </div>
        </li>

        {% for block in section.blocks %}
        {% case block.type %}
        {% when 'linklist2' %}
        <li class="ftlink-li link-list">
          <h2 class="ft-title">{{ block.settings.footer_menu_title }}</h2>
          <a data-bs-toggle="collapse" href="#collapse-{{ block.settings.footer_menu_title | handleize }}" class="ft-title">
            <span>{{ block.settings.footer_menu_title }}</span>
            <i class="ti-plus"></i>
          </a>
          <ul class="footer-sublist collapse" id="collapse-{{ block.settings.footer_menu_title | handleize }}">
            {% assign footer_menu = block.settings.footer_menu_handle %}
            {% for link in linklists[footer_menu].links %}
            {% if linklists[footer_menu].links != '' %}
            <li class="ftsublink-li">
              <a href="{{ link.url }}" class="ft-sublink">{{ link.title }}</a>
            </li>
            {% endif %}
            {% endfor %}
          </ul>          
        </li>
        {% endcase %}
        {% endfor %}
      </ul>
    </div>
  </div>
</section>
<footer>
  <div class="container">
    <div class="footer-bottom">
      <p class="copyright">{{ section.settings.copy_right }}</p>
    </div>
  </div>
</footer>
