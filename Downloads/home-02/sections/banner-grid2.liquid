<!-- banner-area start -->
<section class="banner-grid3">
    <div class="container-fluid container-col">
        <div class="section-capture">
            <div class="section-title">
                {% if section.settings.section_title1 != '' %}
                <h2>
                    <span>{{ section.settings.section_title1 }}</span>
                    <span>{{ section.settings.section_title2 }}</span>
                </h2>
                {% endif %}
            </div>
        </div>
        <div class="row">
            {% for block in section.blocks %}
            <div class="col-xl-6 col-lg-6 col-md-12 col-12 banner-block wow animate__fadeIn">
                    <a href="{{ block.settings.banner_url }}">
                        <img class="img-fluid" src="{% if block.settings.banner_img %}{{ block.settings.banner_img | img_url: 'master' }}{% else %}https://dummyimage.com/650x392/f7f7f7/999999{% endif %}">
                    </a>
                    <div class="text-content">
                        {% if block.settings.banner_title != '' %}
                        <h6>{{ block.settings.banner_title }}</h6>
                        {% endif %}
                        {% if block.settings.banner_desc != '' %}
                        <p>{{ block.settings.banner_desc }}</p>
                        {% endif %}
                        {% if block.settings.banner_button != '' %}
                        <a class="btn btn-style3" href="{{ block.settings.banner_url }}">{{ block.settings.banner_button }}</a>
                        {% endif %}
                    </div>
            </div>
            {% endfor %}
        </div>
        {% if section.settings.section_heading != '' %}
        <div class="section-heading wow animate__fadeIn">
            <h2>{{ section.settings.section_heading }}
                <span>{{ section.settings.section_heading_underline }}</span></h2>
        </div>
        {% endif %}
    </div>
</section>
<!-- banner-area end -->
