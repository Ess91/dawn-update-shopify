<!-- banner-area start -->
<section class="banner-grid banner1">
    <div class="container-col">
        <ul class="banner-wrap">                    
            <li class="banner-wrapper">
                <div class="banner-block">
                    <a href="{{ section.settings.banner01_url }}">
                        <img class="img-fluid" src="{% if section.settings.banner01_img %}{{ section.settings.banner01_img | img_url: 'master' }}{% else %}https://dummyimage.com/430x465/f7f7f7/999999{% endif %}">
