                    <div class="btn-content">
                        <a class="play-button popup-youtube" style="background-color: {{ section.settings.play_btn_color }};" href="{{ section.settings.video_url }}">
                            <i class="fa fa-play"></i>
                            <span class="video-icon-sonar">
                                <span class="video-icon-sonar-bfr"></span>
                            </span>
                        </a>
                    </div>
                </div>
            </li>
            <li class="banner-wrapper">
                <div class="banner-block">
                    <a href="{{ section.settings.banner03_url }}">
                        <img class="img-fluid" src="{% if section.settings.banner03_img %}{{ section.settings.banner03_img | img_url: 'master' }}{% else %}https://dummyimage.com/430x465/f7f7f7/999999{% endif %}">
                    </a>
                    <div class="text-content">
                        <h3>
                            {{ section.settings.banner03_title }}
                        </h3>
                        <span>
                            {{ section.settings.banner03_label }}
                        </span>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</section>


<!-- banner-area end -->
