        {% else %}
        margin-left: -15px;
        {% endif %}
    }
    .banner1 ul.banner-wrap li{
        width: calc(33.33% - 15px);
        {% if settings.enable_rtl %}
        margin-right: 15px;
        {% else %}
        margin-left: 15px;
        {% endif %}
    }
    .banner1 ul li .banner-block .text-content{
        top: 20px;
    }
    .banner1 .banner-block a.play-button{
        width: 60px;
        height: 60px;
    }
    .banner1 .banner-block a.play-button span.video-icon-sonar-bfr{
        width: 80px;
        height: 80px;
        top: -10px;
        left: -10px;
    }
    .banner1 ul.banner-wrap li .banner-block .text-content h3{
        font-size: 20px;
    }
    .banner1 ul.banner-wrap li .banner-block .text-content span{
        margin-top: 15px;
    }
}

@media(max-width: 991px) {
    .banner1 ul.banner-wrap {
        {% if settings.enable_rtl %}
        margin-right: -15px;
        {% else %}
        margin-left: -15px;
        {% endif %}
    }
    .banner1 ul.banner-wrap li .banner-block .text-content h3{
        font-size: 18px;
    }
    .banner1 ul.banner-wrap li .banner-block .text-content span{
        font-size: 14px;
        margin-top: 15px;
    }
}

@media(max-width: 767px) {
    .banner1 ul.banner-wrap {
        flex-direction: column;
        {% if settings.enable_rtl %}
        margin-right: 0;
        {% else %}
        margin-left: 0;
        {% endif %}
    }
    .banner1 ul.banner-wrap li{
        width: 100%;
        {% if settings.enable_rtl %}
        margin-right: 0;
        {% else %}
        margin-left: 0;
        {% endif %}
    }
    .banner1 ul.banner-wrap li{
        margin-top: 15px;
    }
    .banner1 ul.banner-wrap li:first-child{
        margin-top: 0;
    }
    .mfp-iframe-holder .mfp-content{
        max-width: 100%;
    }
}





