<style>
.banner1{
    padding-top: {{ section.settings.banner1_padding_top }}px;
    padding-bottom: {{ section.settings.banner1_padding_bottom }}px;
    border-top: 1px solid #e2e2e2;
}
@media(max-width: 1199px){
    .banner1{
        padding-top: {{ section.settings.banner1_padding_top_ipad }}px;
        padding-bottom: {{ section.settings.banner1_padding_bottom_ipad }}px;
    }
}
@media(max-width: 767px){
    .banner1{
        padding-top: {{ section.settings.banner1_padding_top_xs }}px;
        padding-bottom: {{ section.settings.banner1_padding_bottom_xs }}px;
    }
}

.banner1 .container-col{
  padding-left: 270px;
  padding-right: 270px;
}

@media(max-width: 1599px){
  .banner1 .container-col{
    padding-left: 30px;
    padding-right: 30px;
  }
}
@media(max-width: 767px){
  .banner1 .container-col{
    padding-left: 15px;
    padding-right: 15px;
  }
}

.banner1 ul.banner-wrap {
    display: flex;
    flex-wrap: wrap;
    ms-flex-wrap: wrap;
    {% if settings.enable_rtl %}
    margin-right: -30px;
    {% else %}
    margin-left: -30px;
    {% endif %}
}
.banner1 ul.banner-wrap li {
    width: calc(33.33% - 30px);
    {% if settings.enable_rtl %}
    margin-right: 30px;
    {% else %}
    margin-left: 30px;
    {% endif %}
}
.banner1 ul.banner-wrap li .banner-block{
    position: relative;
    overflow: hidden;
    display: block;
}
.banner1 ul.banner-wrap li .banner-block > a{
    display: block;
    position: relative;
    overflow: hidden;
}

.banner1 ul.banner-wrap li .banner-block img{
    width: 100%;
}

.banner1 ul li .banner-block .text-content{
    position: absolute;
    top: 60px;
    right: 0;
    left: 0;
    text-align: center;
}
.banner1 ul.banner-wrap li .banner-block .text-content h3{
    font-size: 24px;
    text-transform: uppercase;
    font-weight: 700;
    line-height: 1;
    
}
.banner1 ul.banner-wrap li .banner-block .text-content span{
    font-size: 16px;
    line-height: 1;
    text-transform: uppercase;
    font-weight: 600;
    color: #232323;
    border-bottom: 1px solid #232323;
    padding-bottom: 2px;
    margin-top: 25px;
}


/* magificant css */
.banner1 .banner-wrapper.video-block .banner-block .btn-content{
    position: absolute;
    bottom: 50%;
    right: 50%;
    transform: translate(50%, 50%);
}
.banner1 .banner-block a.play-button {
    color: #232332;
    position: relative;
    width: 65px;
    height: 65px;
    font-size: 16   px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 100%;
}
.banner1 .banner-block a.play-button span.video-icon-sonar{
    position: absolute;
    z-index: -1;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    top: 0;
    {% if settings.enable_rtl %}
    right: 0px;
    {% else %}
    left: 0px;
    {% endif %}
    -webkit-animation: video-icon-sonar 2s linear infinite;
    animation: video-icon-sonar 2s linear infinite;
}
.banner1 .banner-block a.play-button span.video-icon-sonar-bfr{
    width: 100px;
    height: 100px;
    top: -18px;
    {% if settings.enable_rtl %}
    right: -18px;
    {% else %}
    left: -18px;
    {% endif %}
    opacity: 1;
    position: absolute;
    border-radius: 100%;
    background-color: rgb(0 0 0 / 58%);
}
.mfp-container.mfp-iframe-holder{
    width: auto;
    left: 15px;
    right: 15px;
}
.mfp-iframe-holder .mfp-close {
    display: block!important;
    font-size: 30px;
    padding: 0;
    height: auto;
    width: auto;
    position: absolute;
    top: -30px;
    {% if settings.enable_rtl %}
    left: 0;
    {% else %}
    right: 0;
    {% endif %}
    opacity: 1;
    background-color: transparent!important;
    line-height: 1;
}
.mfp-iframe-scaler iframe{
    border: none;
}

@media(max-width: 1599px) {
    .banner1 ul li .banner-block .text-content{
        top: 30px;
    }
    .banner1 ul.banner-wrap li .banner-block .text-content span{
        margin-top: 20px;
    }
}
@media(max-width: 1199px) {
    .banner1 ul.banner-wrap{
        {% if settings.enable_rtl %}
