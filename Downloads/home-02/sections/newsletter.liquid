<section class="newsletter">
  <div class="container">
    <div class="row">
      <div class="col-xl-12 col-lg-12 col-md-12 col-12">
          <div class="section-title">
            <span>{{ section.settings.section_sub_title }}</span>
            <h2>{{ section.settings.section_title }}</h2>
          </div>
        
            {% form 'customer' %}
            {{ form.errors | default_errors }}
            {% if form.posted_successfully? %}
            <p class="text-success">
              <span>{{ 'general.newsletter_form.confirmation' | t }}</span>
            </p>
            {% endif %}
            <div class="news-content">
            <input type="hidden" name="contact[tags]" value="newsletter">
            <input type="email" name="contact[email]" class="email mail" id="E-mail" value="{% if customer %}{{ customer.email }}{% endif %}" placeholder="{{ 'general.newsletter_form.newsletter_email' | t }}" autocapitalize="off" required>
            <button type="submit" name="commit" id="Subscribe">
              <i class="feather-arrow-right"></i>
            </button>
            </div>
            {% endform %}
          
      </div>      
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Newsletter",
  "settings": [
    {
        "type": "header",
        "content": "Section Padding"
    },
    {
        "type": "range",
        "id": "section_padding_top",
        "label": "Section Padding Top",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "default": 100
    },
    {
        "type": "range",
        "id": "section_padding_bottom",
        "label": "Section Padding Bottom",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "default": 0
    },
    {
        "type" : "paragraph",
        "content" : "Ipad"
    },
    {
        "type": "range",
        "id": "section_padding_top_lg",
        "label": "Section Padding Top",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "default": 60
    },
    {
        "type": "range",
        "id": "section_padding_bottom_lg",
        "label": "Section Padding Bottom",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "default": 0
    },
    {
        "type" : "paragraph",
        "content" : "Mobile"
    },
    {
        "type": "range",
        "id": "section_padding_top_xs",
        "label": "Section Padding Top",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "default": 40
    },
    {
        "type": "range",
        "id": "section_padding_bottom_xs",
        "label": "Section Padding Bottom",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "default": 0
    },
    {
      "type": "text",
      "id": "section_sub_title",
      "label": "Section Sub Title",
      "default": "Stay Up to Date"
    },
    {
      "type": "textarea",
      "id": "section_title",
      "label": "Section Title",
      "default": "New products and sales. Directly to your inbox."
    }
    
  ],
  "presets":[
    {
      "name": "Newsletter",
      "category": "Newsletter"
    }
  ]
}
{% endschema %}
<style>
  .newsletter{
    padding-top:{{ section.settings.section_padding_top }}px;
    padding-bottom:{{ section.settings.section_padding_bottom }}px;
  }
  @media (max-width: 991px){
    .newsletter{
      padding-top:{{ section.settings.section_padding_top_lg }}px;
      padding-bottom:{{ section.settings.section_padding_bottom_lg }}px;
    }
  }
  @media (max-width: 767px){
    .newsletter{
      padding-top:{{ section.settings.section_padding_top_xs }}px;
      padding-bottom:{{ section.settings.section_padding_bottom_xs }}px;
    }
  }

  .newsletter .section-title h2{
    max-width: 40%;
    margin: 0 auto;
    margin-top: 30px;
  }
  .newsletter form{
    margin-top: 60px;
    text-align: center;
  }
  .newsletter .news-content{
    position: relative;
    display: flex;
    align-items: center;
    width: 30%;
    margin: 0 auto;
  }
  .newsletter form p.text-success{
    margin-bottom: 10px;
  }
  .newsletter .news-content input{
    color: var(--color-body-text);
    width: 100%;
    height: 55px;
    padding: 0 30px;
    border: 1px solid #f1f1f1;
    font-size: 16px;
  }
  .newsletter .news-content input:focus{
    border-color: var(--color-body-text);
  }
  .newsletter .news-content input::placeholder{
    color: var(--color-body-text);
    text-transform: uppercase;
  }

  .newsletter .news-content button{
    position: absolute;
    right: 30px;
    font-size: 18px;
    line-height: 1;
    color: #a2988c;
  }

  @media(max-width: 1199px){
    .newsletter .section-title h2{
      margin-top: 20px;
    }
    .newsletter form{
      margin-top: 30px;
    }
    .newsletter .news-content{
      width: 40%;
    }
  }

  @media(max-width: 991px){
    .newsletter .news-content{
      width: 50%;
    }
  }
  @media(max-width: 767px){
    .newsletter .section-title h2{
      max-width: 100%;
      margin-top: 15px;
    }
    .newsletter .news-content{
      width: 100%;
    }
    .newsletter .news-content input{
      height: 50px;
      padding: 0 15px;
      font-size: 14px;
    }
    .newsletter .news-content button{
      right: 15px;
    }
  }

</style>