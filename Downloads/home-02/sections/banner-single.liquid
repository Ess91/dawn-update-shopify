    .banner-grid.banner2 .banner-text{
        max-width: 100%;
        margin: 0 30px;
    }
    .banner-grid.banner2 .banner-text h2{
        font-size: 35px;
    }
    .banner-grid.banner2 .banner-text p{
        font-size: 16px;
        margin-top: 15px;
    }
    .banner-grid.banner2 .banner-text a{
        margin-top: 30px;
    }
}
