/*banner text content*/


.banner-grid.banner2 ul.banner-wrap {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    background-color: {{ section.settings.section_bg_color }};
    position: relative;
    overflow: hidden;
}
.banner-grid.banner2 ul.banner-wrap li.banner-wrapper{
    width: 50%;
}
.banner-grid.banner2 .banner-text {
    max-width: 50%;
    margin: 0 auto;
}
.banner-grid.banner2 h1.pettern-title{
    color: transparent;
    -webkit-text-stroke: 1px #746659;
    opacity: .2;
    font-size: 150px;
    font-weight: 600;
    position: absolute;
    z-index: 0;
    bottom: -145px;
    right: 100px;
    line-height: 1;
    writing-mode: vertical-rl;
    transform: rotate(254deg);
}
.banner-grid.banner2 .banner-text h2{
    font-size: 45px;
    font-weight: 500;
}

.banner-grid.banner2 .banner-text p{
    font-size: 18px;
    margin-top: 35px;
}
.banner-grid.banner2 .banner-text a{
    margin-top: 55px;
    position: relative;
    z-index: 1;
}

@media (max-width: 1599px){
    .banner-grid.banner2 .banner-text{
        max-width: 70%;
    }
    .banner-grid.banner2 h1.pettern-title{
        font-size: 100px;
        bottom: -100px;
        right: 50px;
    }
}
