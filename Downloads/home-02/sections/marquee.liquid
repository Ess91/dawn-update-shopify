{% if section.settings.show_section %}
<!-- our-brand-area start -->
<section class="marquee-section">
  <div class="marquee-slider owl-carousel owl-theme" id="marquee-slider-{{ section.id }}">
    {% for block in section.blocks %}
    <div class="item">
        <a href="{{ block.settings.marquee_text_url }}">
          <h6>{{ block.settings.marquee_text }}</h6>
        </a>
    </div>
    {% endfor %}
  </div>
</section>
{% endif %}

<!-- our-brand-area end -->
<script>
  $( document ).ready(function() {
  $('#marquee-slider-{{ section.id }}').owlCarousel({
    loop: true,
    rewind: true,
    items:5,
    autoWidth:true,
    margin: 80,
    nav: false,
    navText: ['<i class="fa fa-angle-left"></i>','<i class="fa fa-angle-right"></i>'],
    dots: false,
    {%- if settings.enable_rtl -%}
    rtl: true,
    {%- endif -%}
    slideTransition: 'linear',
    autoplaySpeed: 5000,
    autoplay:true,
    autoplayHoverPause:true
