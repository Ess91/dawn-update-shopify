<!-- banner-area start -->
<section class="custom-banner">
    <div class="banner-block">
        <img src="{% if section.settings.banner_bg_img %}{{ section.settings.banner_bg_img | img_url: 'master' }}{% else %}https://dummyimage.com/1920x700/f7f7f7/999999{% endif %}">
        <div class="text-content">
            <a class="play-button popup-youtube" href="{{ section.settings.banner_bg_button_url }}">
                <i class="feather-play"></i>
                <span class="video-icon-sonar">
                    <span class="video-icon-sonar-bfr"></span>
                </span>
            </a>
            {% if section.settings.main_title != '' %}
            <div class="section-title">
                <h2>
                    {{ section.settings.main_title }}
                </h2>
            </div>
            {% endif %}
        </div>
    </div>
</section>
<!-- banner-area end -->
