        "max": 100,
        "step": 5,
        "unit": "px",
        "default": 0
    },
    {
        "type" : "paragraph",
        "content" : "Ipad"
    },
    {
        "type": "range",
        "id": "section_padding_top_lg",
        "label": "Section Padding Top",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "default": 60
    },
    {
        "type": "range",
        "id": "section_padding_bottom_lg",
        "label": "Section Padding Bottom",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "default": 0
    },
    {
        "type" : "paragraph",
        "content" : "Mobile"
    },
    {
        "type": "range",
